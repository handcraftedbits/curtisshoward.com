{
  "name": "curtisshoward.com",
  "version": "1.0.0",
  "description": "Source for curtisshoward.com",
  "main": "index.js",
  "repository": "https://github.com/handcraftedbits/curtisshoward.com",
  "author": "Curtiss Howard",
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "assets-webpack-plugin": "^3.9.10",
    "chokidar": "^3.2.2",
    "css-loader": "^3.2.0",
    "favicons-webpack-plugin": "^1.0.2",
    "html-webpack-plugin": "^3.2.0",
    "http-shutdown": "^1.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "post-compile-webpack-plugin": "^0.1.2",
    "puppeteer": "^1.20.0",
    "purecss": "^1.0.1",
    "replace-in-file": "^4.1.3",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "serve-handler": "^6.1.2",
    "svg-spritemap-webpack-plugin": "^3.5.0",
    "svg4everybody": "^2.1.9",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2",
    "webpack-merge": "^4.2.2",
    "yargs": "^14.2.0"
  },
  "scripts": {
    "build": "yarn build:webpack && yarn build:hugo",
    "build:hugo": "hugo -d ../dist --minify -s ./hugo",
    "build:webpack": "webpack --config webpack.production.js --mode production",
    "clean": "rimraf {dist,hugo/{data/{favicons.yaml,webpack.json},resources}}",
    "hugo": "hugo -s ./hugo",
    "pdf-render": "node src/pdf-render -d dist -o dist/resume-cjh-public.pdf -u /resume/index.html",
    "postbuild": "yarn pdf-render -r dist/{resume,resume-*.{css,js}}",
    "prebuild": "yarn install && yarn clean",
    "prestart": "yarn install && yarn clean",
    "start": "run-p start:*",
    "start:hugo": "hugo -d ../dist --ignoreCache -s ./hugo -v -w",
    "start:pdf-render": "yarn pdf-render -w dist/resume/index.html",
    "start:webpack": "webpack-dev-server --config webpack.dev.js --mode development"
  }
}
